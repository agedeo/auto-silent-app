<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/lblStepTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Stap 1/4"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher_round"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welkom bij AutoStil"
                android:textSize="24sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We gaan je helpen alles in te stellen."
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgStateLoc"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_dialog_map"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Locatie Toestemming"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Om te weten wanneer je in de bioscoop bent, hebben we je locatie nodig. Kies 'Altijd toestaan' indien gevraagd."
                android:gravity="center"
                android:layout_margin="16dp"/>
            <Button
                android:id="@+id/btnGrantLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geef Toegang"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgStateDnd"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_sound_off"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Niet Storen Toegang"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="De app moet toestemming hebben om je telefoon op 'Niet Storen' te zetten."
                android:gravity="center"
                android:layout_margin="16dp"/>
            <Button
                android:id="@+id/btnGrantDND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Instellingen"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgStateBat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_lock_idle_charging"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Achtergrond Gebruik"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android sluit apps graag af om stroom te besparen. Zet batterijbesparing UIT voor deze app."
                android:gravity="center"
                android:layout_margin="16dp"/>
            <Button
                android:id="@+id/btnIgnoreBattery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voorkom Slapen"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waar wil je stilte?"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/chkTheater"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/cat_theater"/>
                <CheckBox
                    android:id="@+id/chkCinema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/cat_cinema"/>
                <CheckBox
                    android:id="@+id/chkLibrary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/cat_library"/>
                <CheckBox
                    android:id="@+id/chkChurch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/cat_church"/>
                <CheckBox
                    android:id="@+id/chkCemetery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/cat_cemetery"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Optioneel (Standaard Uit):"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/chkMuseum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/cat_museum"/>
                <CheckBox
                    android:id="@+id/chkHospital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/cat_hospital"/>
                <CheckBox
                    android:id="@+id/chkCommunity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/cat_community"/>
                <CheckBox
                    android:id="@+id/chkGovernment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/cat_government"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overig:"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Straal:"
                    android:layout_marginTop="8dp"/>
                <Spinner
                    android:id="@+id/spinnerRadius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/radius_values"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wachttijd (minuten):"
                    android:layout_marginTop="8dp"/>
                <Spinner
                    android:id="@+id/spinnerDelay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/delay_values"/>

            </LinearLayout>
        </ScrollView>
    </ViewFlipper>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volgende"
        android:layout_marginTop="16dp"/>

</LinearLayout>